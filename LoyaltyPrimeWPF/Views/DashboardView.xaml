<UserControl x:Class="LoyaltyPrimeWPF.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoyaltyPrimeWPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"></ColumnDefinition>
            <ColumnDefinition Width="23*"></ColumnDefinition>
            <ColumnDefinition Width="30*"></ColumnDefinition>
            <ColumnDefinition Width="67*"></ColumnDefinition>
            <ColumnDefinition Width="40*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Members" Grid.Row="0" Grid.Column="1" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="15" Height="20" Width="62"></TextBlock>
        <ListBox Margin="5,20,5,5" Grid.RowSpan="3" Grid.Column="1" Grid.ColumnSpan="2"  ItemsSource="{Binding Members}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DisplayText}"></TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <!--Add Member-->
        <TextBlock Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="1" Text="Add Member" FontSize="15" Height="20" Width="88"/>
        <TextBlock Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="1" Text="Name" Margin="0,18" Height="20" Width="40"></TextBlock>
        <TextBox VerticalAlignment="Center" HorizontalAlignment="Stretch" x:Name="NameTxtBox" Grid.Row="4" Grid.Column="2" Margin="5,26,5,12" Height="18"></TextBox>
        <TextBlock Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="1" Text="Address" Margin="0,18" Height="20" Width="53"></TextBlock>
        <TextBox VerticalAlignment="Stretch" x:Name="AddressTxtBox" Grid.Row="5" Grid.Column="2" Margin="5,20,5,5"></TextBox>
        <Button x:Name="Submit" Grid.Column="2" Grid.Row="6" VerticalAlignment="Center" HorizontalAlignment="Right" MinWidth="100" Margin="0,18,5,18" Height="20" Width="100">Submit</Button>


